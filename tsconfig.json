{
	"compilerOptions": {
		"baseUrl": ".",
		"strict": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react",
		"paths": {
			"app/*": ["./packages/app/*"],
			"next-app/*": ["./apps/next/src/*"],
			"next-tests/*": ["./apps/next/tests/*"]
		}
	},
	"extends": "expo/tsconfig.base",
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
