{
	"compilerOptions": {
		"baseUrl": ".",
		"strict": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"useUnknownInCatchVariables": true,
		"jsx": "react-jsx",
		"jsxImportSource": "nativewind",
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"allowJs": false,
		"paths": {
			"~app/*": ["./packages/app/*"],
			"~components/*": ["./packages/components/src/*"],
			"~utils/*": ["./packages/utils/src/*"],
			"~db/*": ["./packages/db/src/*"],
			"~db/migration/*": ["./packages/db/migration/*"],
			"~mutations/*": ["./packages/mutations/src/*"],
			"~web/*": ["./apps/web/src/*"],
			"~mobile/*": ["./apps/mobile/*"],
			"~tests/backend/*": ["./testing/vitest/*"],
			"~tests/frontend/*": ["./testing/playwright/*"],
			"~tests/utils/*": ["./testing/utils/src/*"]
		}
	},
	"include": ["**/*", "**/package.json"],
	"exclude": ["**/prettify.js"],
	"extends": "expo/tsconfig.base",
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
