{
	"compilerOptions": {
		"baseUrl": ".",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react-jsx",
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": true,
		"allowJs": false,
		"moduleSuffixes": [".web", ""],
		"lib": ["DOM", "ESNext"],
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"paths": {
			"~app/*": ["./packages/app/*"],
			"~components/*": ["./packages/components/src/*"],
			"~utils/*": ["./packages/utils/src/*"],
			"~db/*": ["./packages/db/src/*"],
			"~db/migration/*": ["./packages/db/migration/*"],
			"~mutations/*": ["./packages/mutations/src/*"],
			"~web/*": ["./apps/web/src/*"],
			"~mobile/*": ["./apps/mobile/src/*"],
			"~mobile/app/*": ["./apps/mobile/app/*"],
			"~tests/backend/*": ["./testing/vitest/*"],
			"~tests/frontend/*": ["./testing/playwright/*"],
			"~tests/utils/*": ["./testing/utils/src/*"]
		}
	},
	"include": ["**/*", "**/package.json"]
}
