{
	"name": "receipt-app",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*",
		"scripts"
	],
	"type": "module",
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@types/react": "^18.0.1",
		"@types/react-native": "^0.67.4",
		"@typescript-eslint/eslint-plugin": "^6.1.0",
		"@typescript-eslint/parser": "^6.1.0",
		"dotenv": "^16.0.0",
		"dotenv-cli": "^5.1.0",
		"eslint": "^8.45.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"lint-staged": "^13.2.3",
		"pre-commit": "^1.2.2",
		"prettier": "^3.0.0",
		"turbo": "^1.2.2",
		"typescript": "^5.1.6"
	},
	"scripts": {
		"dev": "dotenv -c -- yarn workspace scripts dev",
		"native:dev": "yarn workspace expo-app dev",
		"web:dev": "yarn workspace next-app dev",
		"ios:build": "yarn workspace expo-app ios:update-version && yarn workspace expo-app ios:build",
		"ios:publish": "yarn workspace expo-app ios:publish",
		"typecheck": "tsc --noEmit",
		"format": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
		"format:verify": "prettier --check '**/*.{js,jsx,ts,tsx,json}'",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "eslint --fix . --ext .js,.jsx,.ts,.tsx",
		"postinstall": "patch-package",
		"db:migrate": "dotenv -c -- yarn workspace scripts db:migrate",
		"db:migrate:production": "dotenv -c production -- yarn workspace scripts db:migrate",
		"db:generate-types": "dotenv -c -- yarn workspace scripts db:generate-types && yarn lint:fix && yarn format",
		"lint-staged": "lint-staged"
	},
	"dependencies": {
		"@nextui-org/react": "^1.0.0-beta.10",
		"@sentry/nextjs": "^7.11.1",
		"@tanstack/react-query-devtools": "^4.3.5",
		"@tanstack/react-query": "^4.3.4",
		"dripsy": "^3.6.0",
		"expo": "~44.0.2",
		"expo-cli": "^5.3.1",
		"expo-splash-screen": "~0.14.1",
		"expo-status-bar": "~1.2.0",
		"next": "^12.2.2",
		"patch-package": "^6.4.7",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"react-icons": "^4.4.0",
		"react-native": "0.64.3",
		"react-native-web": "0.17.1",
		"zod": "^3.15.1"
	},
	"version": "1.0.0",
	"pre-commit": [
		"typecheck",
		"lint-staged"
	],
	"lint-staged": {
		"*.{j,t}s{,x}": [
			"prettier --write",
			"eslint --fix"
		]
	}
}
