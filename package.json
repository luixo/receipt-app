{
	"name": "receipt-app",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*",
		"scripts",
		"testing/*"
	],
	"devDependencies": {
		"@babel/core": "^7.23.5",
		"@kristiandupont/recase": "^1.1.2",
		"@types/react": "^18.0.1",
		"@types/react-native": "^0.72.2",
		"@typescript-eslint/eslint-plugin": "^6.1.0",
		"@typescript-eslint/parser": "^6.1.0",
		"alias-hq": "^6.2.1",
		"dotenv": "^16.0.0",
		"dotenv-cli": "^5.1.0",
		"esbuild": "^0.18.17",
		"eslint": "^8.45.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"find-free-ports": "^3.1.1",
		"lint-staged": "^13.2.3",
		"pre-commit": "^1.2.2",
		"prettier": "^3.0.0",
		"testcontainers": "^8.12.0",
		"ts-node": "^10.9.1",
		"turbo": "^1.2.2",
		"typescript": "^5.1.6"
	},
	"scripts": {
		"dev": "dotenv -c -- yarn workspace scripts dev",
		"native:dev": "yarn workspace expo-app dev",
		"web:dev": "yarn workspace next-app dev",
		"web:build": "yarn workspace next-app build",
		"web:start": "yarn workspace next-app start",
		"ios:build": "yarn workspace expo-app ios:update-version && yarn workspace expo-app ios:build",
		"ios:publish": "yarn workspace expo-app ios:publish",
		"typecheck": "tsc --noEmit",
		"format": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
		"format:verify": "prettier --check '**/*.{js,jsx,ts,tsx,json}'",
		"lint": "NODE_OPTIONS=\"--max-old-space-size=4096\" eslint . --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "eslint --fix . --ext .js,.jsx,.ts,.tsx",
		"db:migrate": "dotenv -c -- yarn workspace scripts db:migrate",
		"db:migrate:production": "dotenv -c production -- yarn workspace scripts db:migrate",
		"db:generate-types": "dotenv -c -- yarn workspace scripts db:generate-types && yarn lint:fix && yarn format",
		"lint-staged": "lint-staged",
		"backend:test": "yarn workspace vitest test",
		"frontend:test": "yarn workspace playwright test"
	},
	"dependencies": {
		"@nextui-org/react": "1.0.0-beta.10",
		"@sentry/nextjs": "^7.85.0",
		"@tanstack/react-query": "^4.32.0",
		"@tanstack/react-query-devtools": "^4.32.0",
		"expo": "^49.0.4",
		"expo-cli": "^6.3.10",
		"expo-splash-screen": "^0.20.4",
		"expo-status-bar": "^1.6.0",
		"next": "^14.0.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.10.1",
		"react-native": "^0.72.3",
		"react-native-web": "^0.19.7",
		"zod": "^3.21.4"
	},
	"version": "1.0.0",
	"pre-commit": [
		"typecheck",
		"lint-staged"
	],
	"lint-staged": {
		"*.{j,t}s{,x}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"packageManager": "yarn@3.6.2",
	"resolutions": {
		"zustand@^4.3.9": "patch:zustand@npm%3A4.3.9#./patches/zustand-npm-4.3.9.patch",
		"@trpc/next@^10.35.0": "patch:@trpc/next@npm%3A10.35.0#./patches/@trpc-next-npm-10.35.0.patch",
		"@trpc/server@^10.35.0": "patch:@trpc/server@npm%3A10.35.0#./patches/@trpc-server-npm-10.35.0.patch",
		"@nextui-org/react@1.0.0-beta.10": "patch:@nextui-org/react@npm%3A1.0.0-beta.10#./patches/@nextui-org-react-npm-1.0.0-beta.10.patch",
		"next@^14.0.3": "patch:next@npm%3A14.0.3#./patches/next-npm-14.0.3.patch",
		"react-ssr-prepass@^1.5.0": "patch:react-ssr-prepass@npm%3A1.5.0#./patches/react-ssr-prepass-npm-1.5.0.patch",
		"next-usequerystate@1.13.0": "patch:next-usequerystate@npm%3A1.13.0#./patches/next-usequerystate-npm-1.13.0.patch"
	}
}
